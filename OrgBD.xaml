<Window x:Class="Diplom1.OrgBD"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Diplom1"
        mc:Ignorable="d"
        Title="OrgBD" Height="450" Width="800" WindowStartupLocation ="CenterScreen">
    <Grid>
        <DataGrid x:Name="OrgGrid" HorizontalAlignment="Center" ItemsSource="{Binding}" Height="466" VerticalAlignment="Center" Width="800" AutoGenerateColumns="True" Loaded="OrgList" CellEditEnding="EditBD" >
            <DataGrid.Background>
                <ImageBrush ImageSource="/back2.png"/>
            </DataGrid.Background>
        </DataGrid>

    </Grid>
</Window>
