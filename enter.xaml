<Window x:Class="Diplom1.enter"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Diplom1"
        mc:Ignorable="d"
        Title="enter" Height="275" Width="280">
    <Grid SnapsToDevicePixels="True" Height="237" VerticalAlignment="Top" Margin="10,10,10,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="enter_log" HorizontalAlignment="Left" Height="25" Margin="30,51,0,0" TextWrapping="Wrap" Text="Введите логин" VerticalAlignment="Top" Width="200" Grid.ColumnSpan="2"/>
        <TextBox x:Name="enter_pass" HorizontalAlignment="Left" Height="25" TextWrapping="Wrap" Text="Введите пароль" VerticalAlignment="Center" Width="200" Grid.ColumnSpan="2" Margin="30,0,0,0"/>
        <Button Content="Войти" HorizontalAlignment="Left" Height="36" Margin="30,166,0,0" VerticalAlignment="Top" Width="200" Click="enter_main_button" Grid.ColumnSpan="2" BorderBrush="#FF110000" Background="White"/>
        <Label Content="Введите данные для входа" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="27" Margin="49,10,0,0" VerticalAlignment="Top" Width="162"/>

    </Grid>
</Window>
